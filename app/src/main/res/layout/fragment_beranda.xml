                    app:layout_constraintEnd_toEndOf="@+id/btn_sound_setting"
                    app:layout_constraintStart_toStartOf="@+id/btn_sound_setting"
                    app:layout_constraintTop_toBottomOf="@+id/btn_sound_setting" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:elevation="4sp"
                    android:fontFamily="@font/rammetto_one"
                    android:outlineProvider="none"
                    android:text="@string/Pengaturan"
                    android:textColor="#FFFFFF"
                    android:translationZ="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
